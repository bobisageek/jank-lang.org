#!/usr/bin/env node

import { codeToHtml } from 'shiki'
import { readFileSync } from 'fs'

const file = process.argv[2];
const file_type = process.argv[3];

const code = readFileSync(file).toString(); // input code
const html = await codeToHtml(code, {
  lang: file_type,
  theme: 'monokai'
});

console.log(html);
