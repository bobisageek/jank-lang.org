#!/usr/bin/env node

const shiki = require('shiki');
const fs = require('fs');

const file = process.argv[2];
const file_type = process.argv[3];

shiki.getHighlighter({
  theme: 'monokai'
})
.then(highlighter => {
  console.log(highlighter.codeToHtml(fs.readFileSync(file).toString(), {lang: file_type}));
});
